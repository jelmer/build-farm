per_run_hook

for compiler in gcc gcc-4.0 gcc-4.1; do

  # arrgh, "which" gives no err code on solaris
  path=`which $compiler`
  if [ -x "$path" ]; then

    . common.fns

    test_tree lorikeet-heimdal . $compiler

    # only attempt samba_4_0_test if we have perl
    if which perl > /dev/null; then
      test_tree samba_4_0_test source $compiler
    fi

    test_tree samba_3_2_test source $compiler
  fi
done
  
